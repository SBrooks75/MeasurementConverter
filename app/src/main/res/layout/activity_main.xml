<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/blackwood">



    <Button
        android:id="@+id/tempButtonId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_buttons"
        android:text="Temperature"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#232323"
        android:layout_marginTop="65dp"
        />
    <Button
        android:id="@+id/cookingButtonId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tempButtonId"
        android:layout_marginTop="65dp"
        android:text="Cooking (Volume)"
        android:textSize="20sp"
        android:background="@drawable/custom_buttons"
        android:textStyle="bold"
        android:textColor="#232323" />

    <Button
        android:id="@+id/distanceButtonId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cookingButtonId"
        android:layout_marginTop="65dp"
        android:text="Distance"
        android:textSize="20sp"
        android:background="@drawable/custom_buttons"
        android:textStyle="bold"
        android:textColor="#232323" />


</RelativeLayout>
