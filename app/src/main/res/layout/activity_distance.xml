<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="measurementconverter.spencerbrooks.com.measurementconverter.DistanceActivity"
    android:background="@drawable/blackwood">


    <TextView
        android:id="@+id/distanceTitleTextViewId"
        android:text="Distance"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/distanceImageId"
        android:background="@drawable/distance"
        android:layout_alignParentRight="true"
        android:layout_width="85dp"
        android:layout_height="85dp" />

    <EditText
        android:id="@+id/distanceEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Value"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="65dp"
        android:textColorHint="#ffffffff"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/distanceSpinnerOneId"
        android:entries="@array/distanceoptionsone"
        android:layout_alignBottom="@+id/distanceEditTextId"
        android:layout_toRightOf="@+id/distanceEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/todistanceTextViewId"
        android:textColor="#ffffffff"
        android:text="to"
        android:gravity="center_horizontal"
        android:layout_marginLeft="95dp"
        android:paddingTop="16dp"
        android:textSize="25sp"
        android:layout_below="@+id/distanceEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/distanceResultTextViewId"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:hint="Enter Value"
        android:textColorHint="#ffffffff"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="165dp"
        android:paddingBottom="5dp"
        android:text="0.0"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:gravity="center" />

    <Spinner
        android:id="@+id/distanceSpinnerTwoId"
        android:entries="@array/distanceoptionstwo"
        android:layout_alignBottom="@+id/distanceResultTextViewId"
        android:layout_toRightOf="@+id/distanceResultTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <ImageView
        android:id="@+id/distancespinneronearrowId"
        android:background="@drawable/downtothegroundone"
        android:layout_alignBottom="@+id/distanceSpinnerOneId"
        android:layout_alignStart="@+id/distanceSpinnerOneId"
        android:layout_alignLeft="@+id/distanceSpinnerOneId"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="80dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />


    <ImageView
        android:background="@drawable/lineeeetwoooo"
        android:layout_alignBottom="@+id/distanceResultTextViewId"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/distancespinnertwoarrowId"
        android:background="@drawable/downtothegroundtwo"
        android:layout_alignBottom="@+id/distanceSpinnerTwoId"
        android:layout_alignStart="@+id/distanceSpinnerTwoId"
        android:layout_alignLeft="@+id/distanceSpinnerTwoId"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="80dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceConvertButtonId"
        android:text="@string/convertButton"
        android:background="@drawable/custom_buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/distanceSpinnerTwoId"
        android:layout_marginTop="40dp"/>







</RelativeLayout>
